<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <ripple android:color="#C1DAED">
            <item
                android:id="@android:id/mask"
                android:gravity="center">
                <shape android:shape="rectangle">
                    <solid android:color="#C1DAED" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
        </ripple>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <stroke
                android:width="1dp"
                android:color="#E5E4E4" />
            <padding
                android:bottom="4dp"
                android:left="10dp"
                android:right="10dp"
                android:top="4dp" />
        </shape>
    </item>
</layer-list>