<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="bg_heading">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/merriweather_black</item>
    </style>

    <style name="bg_heading.margins">
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="movie_card_style">
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="title_heading">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="subtext">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:fontFamily">@font/mulish_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ACABAB</item>
    </style>

</resources>