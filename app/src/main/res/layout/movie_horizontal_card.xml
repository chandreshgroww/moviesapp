<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/movie_card_style">

        <ImageView
            android:id="@+id/company_logo_article_card"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/company_name_article_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Hello"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/company_logo_article_card"
            app:layout_constraintStart_toEndOf="@+id/company_logo_article_card"
            app:layout_constraintTop_toTopOf="@+id/company_logo_article_card"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/article_heading_article_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hello"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/company_logo_article_card"
            app:layout_constraintTop_toBottomOf="@+id/company_logo_article_card"
            tools:text="This which I am going to test" />

        <TextView
            android:id="@+id/subtext_articles_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/article_heading_article_card"
            app:layout_constraintStart_toStartOf="@+id/article_heading_article_card"
            app:layout_constraintTop_toBottomOf="@+id/article_heading_article_card"
            tools:text="Overview:Itâ€™s a decent feeling when you score an off-campus internship and gets..." />

        <HorizontalScrollView
            android:id="@+id/chipGroup_horizontal_Scroll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:scrollbars="none"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/subtext_articles_card"
            app:layout_constraintStart_toStartOf="@+id/subtext_articles_card"
            app:layout_constraintTop_toBottomOf="@+id/subtext_articles_card">


            <LinearLayout
                android:id="@+id/tags_chipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:scrollbars="none"
                app:singleLine="true" />

        </HorizontalScrollView>

        <ImageView
            android:id="@+id/author_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_access_time_24"
            app:layout_constraintStart_toStartOf="@+id/subtext_articles_card"
            app:layout_constraintTop_toBottomOf="@+id/chipGroup_horizontal_Scroll" />

        <TextView
            android:id="@+id/author_name_articles_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="1h 45m"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/author_icon"
            app:layout_constraintStart_toEndOf="@+id/author_icon"
            app:layout_constraintTop_toTopOf="@+id/author_icon"
            tools:text="1h 45m" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>